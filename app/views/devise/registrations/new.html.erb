<%= render 'partial/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h1>登録</h1>
      <!-- <hr> -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'partial/deviseErrorMsg' %>

        <!-- = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),class:"btn btn-facebook" %> -->
        <!-- <hr> -->

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email,:class => 'form-control',:placeholder => "email", autofocus: true %>
        </div>

        <div class="from-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em> (<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password,:class => 'form-control',:placeholder => 'パスワード', autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワードの確認 %>
          <%= f.password_field :password_confirmation,:class => 'form-control',:placeholder => 'パスワードの確認',autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up",class:"btn btn-success" %>
        </div>
        </br>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

