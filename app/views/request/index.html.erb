<%= render 'partial/navbar' %>

<div class="form-wrapper">
  <h1>正式なお申込みフォーム</h1>
  <form>

    <div class="form-item">
      <label for="お名前"></label>
      <input type="お名前 name="お名前" required="required" placeholder="お名前"></input>
    </div>

    <div class="form-item">
      <label for="電話番号"></label>
      <input type="電話番号" name="電話番号" required="required" placeholder="電話番号"></input>
    </div>

    <div class="form-item">
      <label for="会社"></label>
      <input type="会社" name="会社" required="required" placeholder="会社"></input>
    </div>

    <div class="form-item">
      <label for="住所"></label>
      <input type="住所 name="住所" required="required" placeholder="住所"></input>
    </div>

    <div class="form-item">
      <label for="email"></label>
      <input type="email" name="email" required="required" placeholder="Email Address"></input>
    </div>

    <div class="button-panel">
      <input type="submit" class="button" title="Sign In" value="送信"></input>
    </div>

  </form>
  <div class="form-footer">
    <p><a href="#">注意事項</a></p>
    <p><a href="#">お問い合わせ</a></p>
  </div>
</div>
